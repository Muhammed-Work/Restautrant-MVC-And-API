@model RestaurantGorRahsa.viewModels.mealOrderVM
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container my-5">
    <h1 class="text-center">Meal Detail</h1>

    <div class="card mx-auto" style="max-width: 600px;">
        <img src="~/Uploads/Images/@Model.ImageName" class="card-img-top" alt="Meal Image">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">Price: $@Model.price</p>
            <p class="card-text">Available Quantity: @Model.OfferedNumber</p>

            <form asp-action="MakeOrder" asp-controller="Home" method="post" class="mt-4">
                <!-- حقل الكمية -->
                <div class="mb-3">
                    <label for="quantity" class="form-label">Select Quantity</label>
                    <select class="form-select" id="quantity" asp-for="Qty" required>
                        @for (int i = 1; i <= Model.OfferedNumber; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                </div>

                <!-- حقل اسم الوجبة -->
                <input type="hidden" asp-for="Name" />

                <!-- حقل السعر -->
                <input type="hidden" asp-for="price" />

                <!-- حقل صورة الوجبة -->
                <input type="hidden" asp-for="ImageName" />

                <!-- حقل الكمية المتاحة -->
                <input type="hidden" asp-for="OfferedNumber" />

                <!-- تمرير معرف الوجبة -->
                <input type="hidden" asp-for="MealId" />

                <!-- تمرير معرف المستخدم -->
                <input type="hidden" asp-for="UserID" value="@User.Identity.Name" />

                <button type="submit" class="btn btn-primary">Add to Order</button>
            </form>



        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
