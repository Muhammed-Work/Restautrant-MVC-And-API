@model List<RestaurantGorRahsa.Models.ModelMeal>






<div class="container my-5">
    <div class="row justify-content-center">

        @foreach (var item in Model)
        {
        <div class="col-md-4">
            <div class="card">
                <img src="~/Uploads/Images/@item.ImageName" class="card-img-top" alt="Meal Image">
                <div class="card-body text-center">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">A short description of the meal can go here.</p>
                    <a asp-action="Detail" asp-controller="Home" asp-route-id="@item.ID" class="btn btn-primary">Detail</a>
                </div>
            </div>
        </div>
        }
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>