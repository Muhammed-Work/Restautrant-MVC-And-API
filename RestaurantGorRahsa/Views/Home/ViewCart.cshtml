@model IEnumerable<RestaurantGorRahsa.Models.ModelItem>

@{
    ViewData["Title"] = "My Cart";
}

<h1>My Cart</h1>

@if (!Model.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Meal</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MealID</td>
                    <td>@item.meal.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@(item.Quantity * item.Price)</td>
                    <td>
                        <form asp-action="Cancelitem" asp-controller="Home" method="post">
                            <input type="hidden" name="itemId" value="@item.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Cancel</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p>
        <strong>Total:</strong>
        @Model.Sum(i => i.Quantity * i.Price).ToString("C")
    </p>
}
