@model List<RestaurantGorRahsa.Models.ModelMeal>
<div class="container mt-4">
    <a asp-action="CreateEdite" asp-controller="Meal" class="btn btn-success mb-3">New</a>
    <h2>
        List Meal
    </h2>
     @if (Model != null && Model.Any())
    {
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Image</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.OfferedNumber</td>
                    <td>@item.price</td>
                    <td>

                            <img src="~/Uploads/Images/@item.ImageName" alt="Meal Image" style="height: 50px; width: 50px; object-fit: cover;">
                    </td>

                    <td>
                        <a style="height:max-content"
                               asp-controller="Meal" asp-action="CreateEdite" asp-route-id="@item.ID"
                           class="btn btn-info btn-fw">Edit</a>
                    </td>
                    <td>
                        <form asp-action="Delete" asp-controller="Meal" asp-route-id="@item.ID" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    }
    else
    {
        <p>No meals available.</p>
    }

</div>
