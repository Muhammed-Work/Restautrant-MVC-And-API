@model IEnumerable<RestaurantGorRahsa.Models.ModelType>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
    <a asp-action="CategoriesCreate" asp-controller="Category" class="btn btn-success mb-3">New</a>

    <h2 class="mb-3">List of Categories</h2>
    @if (!Model.Any())
    {
        <p>No categories found.</p>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>
                            <a style="height:max-content"
                               asp-controller="Category" asp-action="CategoriesCreate" asp-route-id="@item.Id"
                               class="btn btn-info btn-fw">Edit</a>

                            <form asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
